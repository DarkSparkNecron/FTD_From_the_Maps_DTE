<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>


	<Target Name="CopyAssetsAndGost" AfterTargets="Build">
		<ItemGroup>
			<!-- Указываем, какие папки копировать -->
			<AssetFolder Include="assets\**" />
		</ItemGroup>

		<!-- Удаляем старые версии папок -->
		<RemoveDir Directories="$(OutputPath)\assets" />

		<!-- Копируем файлы -->
		<Copy SourceFiles="@(assetFolder)"
			  DestinationFolder="$(OutputPath)%(RecursiveDir)\assets"
			  SkipUnchangedFiles="true" />
	</Target>

</Project>